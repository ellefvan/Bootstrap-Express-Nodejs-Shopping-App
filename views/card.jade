extends partials/nav

block content
    include partials/left-nav
    - if (successMsg)
        .row
            .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
            #success.alert.alert-success= successMsg
    - if (!successMsg)
        .row
            #success.no-message
    .row
        .card.col-sm-4
           - var url= pokemon.imagePath;
           img(class="card-img-top img-responsive" src=url alt="Card image cap")
           .card-body
                    a(href='/add-to-cart/'+pokemon._id class="btn btn-dark text-white" role="button") Add to Shopping Cart
                    h3(class="card-title")= pokemon.title
                    .price= "$" + pokemon.price + ".00"
                    p(class="card-text")= pokemon.description